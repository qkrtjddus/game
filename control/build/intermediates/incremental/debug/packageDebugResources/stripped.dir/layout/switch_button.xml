<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:strokeColor="?colorPrimary"
        app:strokeWidth="2dp">

        <LinearLayout
            android:id="@+id/buttonLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/questionBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/questionButton"
                    style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                    android:layout_width="@dimen/base_switch_button_size"
                    android:layout_height="@dimen/base_switch_button_size"
                    android:padding="0dp"
                    android:visibility="gone"
                    app:icon="@drawable/question"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="@dimen/base_icon_control_size"
                    app:strokeWidth="0dp"
                    tools:visibility="visible" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/flagBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/flagButton"
                    style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                    android:layout_width="@dimen/base_switch_button_size"
                    android:layout_height="@dimen/base_switch_button_size"
                    android:padding="0dp"
                    app:icon="@drawable/flag"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="@dimen/base_icon_control_size"
                    app:strokeWidth="0dp" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/openBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/openButton"
                    style="@style/Widget.App.Button.OutlinedButton.IconOnly"
                    android:layout_width="@dimen/base_switch_button_size"
                    android:layout_height="@dimen/base_switch_button_size"
                    android:padding="0dp"
                    app:icon="@drawable/touch"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="@dimen/base_icon_control_size"
                    app:strokeWidth="0dp" />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>